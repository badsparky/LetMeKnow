<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LetMeKnow.MainControler"
             x:Name="Page">

    <VerticalStackLayout  HorizontalOptions="Center" VerticalOptions="Center">
        <GraphicsView x:Name="GraphicsView"  Drawable="{Binding Path=GraphicsDrawable}"   HeightRequest="{Binding Height}" WidthRequest="{Binding Width}" BackgroundColor="{StaticResource Primary}"/>
        <Grid>
            <Label x:Name="Goal" Text="{Binding Path=GoalString,Mode=TwoWay}" FontSize="Large" HorizontalTextAlignment="Center" TextColor="{StaticResource Gray300}" ZIndex="1" IsVisible="false"/>
            <Label x:Name="LeftTime" Text="{Binding Path=LeftMinuetsAndHours,Mode=TwoWay}" FontSize="Large" HorizontalTextAlignment="Center" TextColor="{StaticResource Gray300}" ZIndex="2" IsVisible="true"/>
            <Button Opacity="0" x:Name="TextChange" Clicked="TextChange_Clicked" ZIndex="3"/>
        </Grid>
        
        <!--<Label Text="{Binding Path=LeftTime}"/>-->

    </VerticalStackLayout>

</ContentPage>
